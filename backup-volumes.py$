import sys
import subprocess
import os
import docker
import json
client = docker.from_env();
for container in client.containers.list():
   #print "***** Start backup the container : " +container.name+ " *****"
   #output = os.system("/usr/bin/docker inspect --format='{{.Mounts}}' --type='container' "+ container.short_id)
   output = subprocess.Popen(["docker", "inspect" , "--format='{{.Mounts}}'",  container.short_id], stdout=subprocess.PIPE).stdout.read()
   print "**************************************"
   if output != []:
       joutput =  json.dumps(output)
       print joutput["volume"]

